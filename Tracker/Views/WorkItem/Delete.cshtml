@model Tracker.Data.WorkDetailsDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form method="post" asp-action="Delete">
    <div>
        <fieldset disabled>
            <div class="col-8">
                <input type="hidden" asp-for="Works.Id" />
                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Works.Type" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Works.Type" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Works.CreatedAt" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Works.CreatedAt" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Works.Status" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Works.Status" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-4">
                        <label asp-for="Works.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.Works.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label class="col-form-label">Modifed At</label>
                    </div>
                    <div class="col-8">
                        @foreach (var item in Model.ModLogs)
                        {
                            <p>@item.ModifiedAt</p>
                        }
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.Works.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}